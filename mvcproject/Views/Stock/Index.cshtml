@using SM.Data.Models.DTOs
@model IEnumerable<StockDisplayModel>

@{
    Layout = "_AdminLayout";
}

<h2>Stocks</h2>

<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Seach by smartphone"/>
    <button type="submit" class="btn btn-primary">Find</button>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Clear</a>
</form>

<table class="table table-bordered">
    <tr>
        <th>Smartphone</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandName @item.SmartphoneName</td>
            <td>@item.Quantity</td>
            <td>
                <a asp-action="ManageStock" asp-controller="Stock" asp-route-phoneId="@item.SmartphoneId" class="btn btn-info">Update Stock</a>
            </td>
        </tr>
    }
</table>